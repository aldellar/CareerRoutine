{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["prepOutline", "weeklyDrillPlan", "starterQuestions", "resources"],
  "properties": {
    "prepOutline": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["section", "items"],
        "properties": {
          "section": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
          },
          "items": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 160
            }
          }
        }
      }
    },
    "weeklyDrillPlan": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["day", "drills"],
        "properties": {
          "day": {
            "type": "string",
            "enum": ["Mon", "Tue", "Wed", "Thu", "Fri"]
          },
          "drills": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 160
            }
          }
        }
      }
    },
    "starterQuestions": {
      "type": "array",
      "minItems": 3,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 200
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "url"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  }
}

