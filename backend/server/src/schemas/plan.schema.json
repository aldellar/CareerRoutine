{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["weekOf", "timeBlocks", "dailyTasks", "milestones", "resources", "version"],
  "properties": {
    "weekOf": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "timeBlocks": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["start", "end", "label"],
          "properties": {
            "start": {
              "type": "string",
              "pattern": "^[0-2][0-9]:[0-5][0-9]$"
            },
            "end": {
              "type": "string",
              "pattern": "^[0-2][0-9]:[0-5][0-9]$"
            },
            "label": {
              "type": "string",
              "minLength": 1,
              "maxLength": 80
            }
          }
        }
      }
    },
    "dailyTasks": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1,
          "maxLength": 120
        }
      }
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 120
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "url"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "version": {
      "type": "integer",
      "minimum": 1
    }
  }
}

