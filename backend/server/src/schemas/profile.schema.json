{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "stage", "targetRole", "timeBudgetHoursPerDay", "availableDays"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 60
    },
    "stage": {
      "type": "string",
      "minLength": 2,
      "maxLength": 40
    },
    "targetRole": {
      "type": "string",
      "minLength": 2,
      "maxLength": 60
    },
    "timeBudgetHoursPerDay": {
      "type": "number",
      "minimum": 0.5,
      "maximum": 12
    },
    "availableDays": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "default": []
    }
  }
}

